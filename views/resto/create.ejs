  <div class="card">
    <div class="card-body">
      <form action="/resto/<%= resto._id %>/create" method="post">
          <p><%= resto.name %></p>
          <div class="form-check">
              <input class="form-check-input" type="radio" name="rating" id="flexRadioDefault1" value="3">
              <label class="form-check-label" for="flexRadioDefault1">
                ⭐⭐⭐
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="rating" id="flexRadioDefault2" value="2">
              <label class="form-check-label" for="flexRadioDefault2">
                ⭐⭐
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="rating" id="flexRadioDefault2" value="1">
